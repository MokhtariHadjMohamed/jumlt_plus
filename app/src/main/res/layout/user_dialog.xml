<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView7"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="تفاصيل الملف الشخصي"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/nameUserDialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/edit_text_shap"
            android:ems="10"
            android:hint="الأسم "
            android:inputType="text"
            android:padding="10dp"
            android:textColor="@color/greenMy"

            android:textColorHint="#777777"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView7" />

        <EditText
            android:id="@+id/familyNameUserDialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/edit_text_shap"
            android:ems="10"
            android:hint="اللقب"
            android:inputType="text"
            android:padding="10dp"
            android:textColor="@color/greenMy"
            android:textColorHint="#777777"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/nameUserDialog" />

        <EditText
            android:id="@+id/addressUserDialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/edit_text_shap"
            android:ems="10"
            android:gravity="top"
            android:hint="عنوان محل"
            android:inputType="textMultiLine"
            android:lines="3"
            android:padding="10dp"
            android:textColor="@color/greenMy"
            android:textColorHint="#777777"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/familyNameUserDialog" />

        <TextView
            android:id="@+id/textView8"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/addressUserDialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="sans-serif-condensed"
            android:text="تفاصيل الحساب"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/phoneUserDialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/edit_text_shap"
            android:ems="10"
            android:gravity="right"
            android:hint="رقم الهاتف"
            android:inputType="phone"
            android:padding="10dp"
            android:textColor="@color/greenMy"
            android:textColorHint="#777777"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/emailUserDialog" />

        <EditText
            android:id="@+id/emailUserDialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/edit_text_shap"
            android:ems="10"
            android:gravity="right"
            android:hint="بريد الإلكتروني"
            android:inputType="textEmailAddress"
            android:padding="10dp"
            android:textColor="@color/greenMy"
            android:textColorHint="#777777"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView8" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/submitUserDialog"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"

            android:layout_marginTop="8dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/edit_text_shap"
            android:backgroundTint="@color/orangeMy"
            android:text="تحديث"
            android:textColor="@color/whiteMy"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/phoneUserDialog" />

        <Button
            android:id="@+id/cancelBtnUserDialog"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/submitUserDialog"
            app:layout_constraintTop_toBottomOf="@+id/submitUserDialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:backgroundTint="@color/orangeMy"
            android:text="رجوع" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
